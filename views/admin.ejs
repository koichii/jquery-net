<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
			input {font-size: 18px; }
			body {font-size: 18px; }
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 18px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      #messages { margin-bottom: 40px }
    </style>
  </head>
  <body>
		<h1>いらっしゃい</h1>

		<h2>新しい room 名前</h2>

		<input id="room" autocomplete="off" />
    <button onClick="createRoom()"> room 作成 </button> <br />

		<h2>さんかするへやを選ぶ</h2>
		<% var names = Object.keys( rooms ); %>
		<% for(var i = 0; i < names.length; i++) { %>
			<input type="radio" name="room" value="<%= names[i] %>"><%= names[i] %></input> <br />
		<% } %>
      <button onClick="login()">ログイン</button> <br />

    <textarea id="script"></textarea>
    <button onClick="doScript();">実行</button>
    <textarea id="result"></textarea>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
		<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?lang=css&amp;skin=sunburst"></script>
    <script>
      var socket = io();
      $(function () {
        // 送信
        $('form').submit(function(){
          socket.emit('chat message', $('#m').val());
          $('#m').val('');
          return false;
        });
        // 受信
        socket.on('chat message', function(msg){
          $('#messages').append($('<li>').text(msg));
          window.scrollTo(0, document.body.scrollHeight);
        });
      });
      // room 作成
      function createRoom() {
        var room = $('#room').val();
        socket.emit('admin-createRoom', room);
      };
    // login
	    function login() {
			var name = $('#name').val();
			var room = $('input[name=room]:checked').val();
				window.open('/client' + '?name='+name+ '&room='+room);
        socket.emit('login', {name: name, room: room, role: 'admin'} );
	    };
	    // script送信
	    function doScript() {
				var s = $('#script').val();
        socket.emit('script', s);
				$('#result').val('');
	    };
	    // script受信＆実行
	    socket.on('script', function(s) {
				//var doGlobal = eval;
        //var r = doGlobal(s);
				$('#messages').append( $('<pre>').addClass("prettyprint").text(s).appendTo($('<li>')) );
				// .append('<pre>').addClass("prettyprint").text(s);
				PR.prettyPrint();
	    });

    </script>
    <ul id="messages"></ul>

  </body>
</html>
